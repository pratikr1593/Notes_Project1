<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thevarunshah.notes" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextNoteView"
            android:label="Text Note"/>
        <activity
            android:name=".ListNoteView"
            android:label="List Note"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ChecklistView"
            android:label="Checklist"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ReminderView"
            android:label="Reminder"/>
    </application>

</manifest>
