<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#FFA000</item>
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="actionBarTheme">@style/ToolbarDarkOverflow</item>
        <item name="popupTheme">@style/Theme.AppCompat.NoActionBar</item>
    </style>

    <style name="ToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#FFA000</item>
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFA000</item>
        <item name="android:background">#fff</item>
    </style>

</resources>
